<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C006A"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#D8CDD9"
        android:textSize="50sp"></TextView>

    <EditText
        android:id="@+id/user_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:hint="用户名"
        android:textColorHint="#935295"
        android:background="@null"
        android:drawableBottom="@drawable/line"></EditText>

    <EditText
        android:id="@+id/user_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:hint="密码"
        android:inputType="textPassword"
        android:textColorHint="#935295"
        android:background="@null"
        android:drawableBottom="@drawable/line"></EditText>
    <Button
        android:id="@+id/button_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textColor="#D8CDD9"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/button_shape"></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/text_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还未拥有一个账户？"
            android:textColor="#D8CDD9"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginLeft="100dp"></TextView>

        <Button
            android:id="@+id/button_logon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D8CDD9"
            android:text="注册"
            android:background="@drawable/button_shape"
            android:layout_gravity="bottom"></Button>
    </LinearLayout>

</LinearLayout>