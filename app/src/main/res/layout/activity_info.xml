<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Info">

    <com.example.android.widget.InfoTitle
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:bartitle="个人信息"
        app:isVisible="false">

    </com.example.android.widget.InfoTitle>

    <LinearLayout
        android:id="@+id/edit_image"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="头像"
            android:textColor="@color/black0"></TextView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/info_image"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="280dp"
            android:clickable="true"
            android:src="@drawable/touxiang"></de.hdodenhof.circleimageview.CircleImageView>

        <ImageView
            android:id="@+id/jt_right_iv"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="18dp"
            android:scaleType="centerCrop"
            android:src="@drawable/go" />
    </LinearLayout>

    <com.example.android.widget.InfoItem
        android:id="@+id/edit_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:jt_visible="false"
        app:title="ID"></com.example.android.widget.InfoItem>

    <com.example.android.widget.InfoItem
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:edt_hint_content="请输入姓名"
        app:title="昵称"></com.example.android.widget.InfoItem>

    <com.example.android.widget.InfoItem
        android:id="@+id/edit_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:edt_hint_content="请选择性别"
        app:title="性别"></com.example.android.widget.InfoItem>

    <com.example.android.widget.InfoItem
        android:id="@+id/edit_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:edt_hint_content="介绍一下自己吧！"
        app:title="介绍"></com.example.android.widget.InfoItem>
</LinearLayout>