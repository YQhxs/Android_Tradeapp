<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C006A"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="注册"
        android:textColor="#D8CDD9"
        android:textSize="50sp"></TextView>
    <EditText
        android:id="@+id/register_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:hint="用户名"
        android:textColorHint="#935295"
        android:background="@null"
        android:drawableBottom="@drawable/line"></EditText>
    <EditText
        android:id="@+id/register_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:hint="密码"
        android:inputType="textPassword"
        android:textColorHint="#935295"
        android:background="@null"
        android:drawableBottom="@drawable/line"></EditText>
    <EditText
        android:id="@+id/register_next_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:textColorHint="#935295"
        android:background="@null"
        android:drawableBottom="@drawable/line"></EditText>
    <Button
        android:id="@+id/button_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="#D8CDD9"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/button_shape"></Button>
</LinearLayout>